<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground">



    <TextView
        android:id="@+id/channel_title"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#F4F4F6"
        android:text="sdfghjkll"
        android:textSize="30dp"
        style="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintTop_toTopOf="parent"
   />
    <ImageView
        android:id="@+id/image_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_play_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_stop"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintTop_toBottomOf="@id/channel_title"/>


    <ImageView

        android:id="@+id/image_stop"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_stop_foreground"
        app:layout_constraintStart_toEndOf="@id/image_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent=".5"

        app:layout_constraintHeight_percent=".18"
        app:layout_constraintTop_toBottomOf="@id/channel_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>